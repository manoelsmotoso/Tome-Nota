<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controller.NovaNotaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelTitulo"
        android:id="@+id/tvTitulo"
        android:fontFamily="cursive"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:id="@+id/titulo"
        android:fontFamily="cursive" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/labelDescricao"
        android:layout_below="@+id/tvTitulo"
        android:id="@+id/tvDescricao"
        android:fontFamily="cursive" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/descricao"
        android:layout_below="@+id/tvDescricao"
        android:fontFamily="cursive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSalvar"
        android:id="@+id/btnNovaNota"
        android:layout_below="@+id/descricao"
        android:layout_alignParentEnd="true"
        android:fontFamily="cursive"
        android:elevation="5dp"
        style="@style/btn_primary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancelar"
        android:id="@+id/btnCancelar"
        android:layout_below="@+id/descricao"
        android:layout_alignParentEnd="false"
        android:fontFamily="cursive"
        android:elegantTextHeight="false"
        android:elevation="5dp"
        style="@style/btn_warning" />

</RelativeLayout>
